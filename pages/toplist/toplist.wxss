/* pages/top/top.wxss */

.top-page{
  /* 向标记内设置边距 padding 向标记外 margin */
  padding: 20px;
}
.top-year{
  width: 100%;
  height: 180px;
  /* 通过渐变设置背景颜色 */
  /*  */
  background-image: linear-gradient(135deg,#A05030 145px,#397286);
  /* 圆角 */
  border-radius: 5px;

  /* 设置定位 */
  position: relative;
}
.top-year-title{
  /* absolute 绝对定位，只会相对有定位级的父元素 */
  position: absolute;
  top: 20px;
  left: 20px;
  /* 设置字体颜色 */
  color: white;
}
.top-year-title text:nth-of-type(1){
  /* 设置第一行的字的大小 */
  font-size: 20px;
}
.top-year-title text:nth-of-type(2){
  /* 设置第二行的字的大小 */
  font-size: 10px;
}
.top-year-imgs{
  /* 通过定位设置三张图片的位置 */
  position: absolute;
  left: 20px;
  bottom: 10px;
}
.year-img{
  width: 60px;
  height: 90px;
  /* 设置圆角 */
  border-radius: 3px;
  /* 设置一个相对定位 */
  position: relative;
  /* 设置层级关系 */
  z-index: 3;
}
.year-img:nth-of-type(2){
  margin-left: -20px;
   /* 设置层级关系 */
  z-index: 2;
}
.year-img:nth-of-type(3){
  margin-left: -20px;
   /* 设置层级关系 */
  z-index: 1;
}

