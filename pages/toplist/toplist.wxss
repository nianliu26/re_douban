/* ***************top250榜单************** */
.top-select{
  /* 设置弹性容器 水平放置 */
  display: flex;

  width: 100%;
  height: 90px;
  /* border: 2px solid #8b8b8b; */
  /* 设置圆角 */
  border-radius: 5px;

  /* 设置外边距 */
  margin: 40px 0;

  /* 设置阴影 */
  /* box-shadow(x,y,width,color) 
    x y 是阴影的偏移位置
    width 是阴影的宽度
    color 是阴影的颜色
  */
  box-shadow: 0px 0px 10px black;
}
.top-select-title{
  width: 90px;

  background-color: rgb(48,49,56);
  /* 设置圆角 */
  border-radius: 5px;
  /* 将字体内容居中 */
  display: flex;
  justify-content: center;
  align-items: center;
  /* 设置弹性容器的方向 */
  flex-direction: column;

  color: white;
  /* 放大 */
  /* 确定方法的起始位置 */
  transform-origin: left center;
  transform: scale(1.2);
}
/* 设置第一行文字 */
.top-select-title text:nth-of-type(1){
  font-size: 20px;
  font-weight: bold;
}
/* 设置电影名称显示 */
.top-select-movies{
  margin-left: 20px;
  /* 设置弹性容器 */
  display: flex;
  /* 设置方向 */
  flex-direction: column;
  /* 设置相等的间隔 */
  justify-content: space-around;
  /* 字体颜色 */
  color: #8b8b8b;
  /* 字体大小 */
  font-size: 10px;
}
.top-select-movies text{
  color: rgb(237,169,63);
  margin-left: 5px;
}



